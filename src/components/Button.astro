---
const { label, variant = "default" } = Astro.props;
---

<button class={variant}>
    {label}
</button>
<style>
    button {
        font-family: Gustavo, sans-serif;
        font-weight: 500;
        padding: 16px 24px;
        border: none;
        background-color: var(--brown);
        color: var(--nude);
        cursor: pointer;
        font-size: 15px;
    }

    .lighter {
        background-color: var(--fg2);
        width: 100%;
        margin-top: 24px;
    }

    .underline {
        background-color: transparent;
        color: var(--fg2);
        position: relative;
        padding: 12px 0;

        &::after {
            content: "";
            position: absolute;
            left: 50%;
            height: 1px;
            width: 0;
            background-color: var(--fg2);
            bottom: 0;
            transition: 0.3s;
        }

        &:hover::after {
            left: 0;
            width: 100%;
        }
    }
</style>
